<h2 class='title'><%= resource_name.to_s.humanize %>個人資料</h2>

<div class="container m-6">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="field">
      <%= f.label :username, '使用者帳號' %><br />
      <div class="control">
        <%= f.text_field :username, class: 'input is-medium' %>
      </div>
      <p class="help">範例:@kamitsuTW</p>
    </div>
  
    <div class="field">
      <%= f.label :intro, '個人簡介' %><br />
      <div class="control">
        <%= f.text_area :intro, class: 'textarea is-medium is-success', rows: 5 %>
      </div>
    </div>
  
    <div class="field">
      <%= f.label :email %><br />
      <div class="control">
        <%= f.email_field :email, autocomplete: "email", class: 'input is-medium' %>
      </div>
    </div>
  
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
  
    <div class="field">
      <%= f.label :password, '更改密碼' %> <i>(選填)</i><br />
      <div class="control">
        <%= f.password_field :password, autocomplete: "new-password", class: 'input is-medium' %>
        <% if @minimum_password_length %>
          <br />
          <em class='help'>至少 <%= @minimum_password_length %> 位數</em>
        <% end %>
      </div>
    </div>
  
    <div class="field">
      <%= f.label :password_confirmation, '更改密碼確認' %> <i>(同上)</i><br />
      <div class="control">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input is-medium' %>
      </div>
    </div>
  
    <div class="actions">
      <%= f.submit "Update", class: 'button is-primary is-medium' %>
      
      <%= link_to "Back", :back, class: 'button' %>
    </div>
  <% end %>
</div>